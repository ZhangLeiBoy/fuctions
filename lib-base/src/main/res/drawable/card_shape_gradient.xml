<?xml version="1.0" encoding="utf-8"?>

<!-- list item selector 渐变 -->

<!-- 当angle=0时，渐变色是从左向右。 然后逆时针方向转，当angle=90时为从下往上。 -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="0" android:endColor="#f00" android:startColor="#00f" />
            <corners android:radius="@dimen/app_corner_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="#888" android:startColor="#ff0" />
            <corners android:radius="@dimen/app_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="@color/app_main_color_uncheck" android:startColor="@color/app_main_color" />
            <stroke android:width="1px" android:color="@color/app_line_color" />
            <corners android:radius="@dimen/app_corner_radius" />
        </shape>
    </item>
</selector>