<?xml version="1.0" encoding="utf-8"?>
<!-- list item selector 可改为渐变 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape >
            <gradient android:endColor="@drawable/app_list_item_click"
                android:startColor="@drawable/app_list_item_click"/>
            <corners android:radius="@dimen/app_corner_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="@drawable/app_list_item_click"
                android:startColor="@drawable/app_list_item_click"/>
            <corners android:radius="@dimen/app_corner_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="@color/app_bg_card"
                android:startColor="@color/app_bg_card"/>
            <stroke
                android:width="1px"
                android:color="@color/app_line_color" />
            <corners android:radius="@dimen/app_corner_radius" />
        </shape>
    </item>
</selector>