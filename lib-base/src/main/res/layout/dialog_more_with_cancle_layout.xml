<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_more_with_cancle_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dip"
            android:textColor="#8F8E94"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:id="@+id/dialog_title_line"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#3f4d4d4d"
            android:visibility="gone" />

        <ListView
            android:id="@+id/dialog_more_list"
            android:layout_width="match_parent"
            android:divider="@color/app_line_color"
            android:dividerHeight="1px"
            android:layout_height="wrap_content"></ListView>

    </LinearLayout>

    <TextView
        android:id="@+id/cancle"
        android:textSize="18sp"
        android:textColor="@color/app_text_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/dialog_bottom_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/app_cancel" />

</LinearLayout>